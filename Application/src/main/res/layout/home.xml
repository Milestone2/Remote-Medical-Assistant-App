<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#f3f0f0">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_heart"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        card_view:cardBackgroundColor="#FFF"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="3dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/heart1"
                android:layout_gravity="center_vertical"
                android:id="@+id/ivHeart"
                android:layout_weight="1"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="2">

                <TextView
                    android:text="Rythme cardiaque :"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/tvInfo1" />

                <TextView
                    android:id="@+id/tvHeartInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:text="--- bpm"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:textSize="55sp" />
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_lung"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="170dp"
        card_view:cardBackgroundColor="#FFF"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="3dp"
        android:layout_marginBottom="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="130dp"

                android:layout_gravity="center_vertical"
                android:src="@drawable/lung"
                android:id="@+id/ivLung"
                android:layout_weight="1.4" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="2">

                <TextView
                    android:text="Rythme pulmonaire: "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/tvInfo3" />

                <TextView
                    android:id="@+id/tvLungInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="--- bpm"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="sans-serif"
                    android:textSize="55sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_temp"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        card_view:cardBackgroundColor="#FFF"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="3dp"
        android:layout_marginBottom="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="150dp">

            <ImageView
                android:layout_width="0dp"
                android:layout_height="120dp"
                app:srcCompat="@drawable/thermo"

                android:layout_gravity="center_vertical"
                android:id="@+id/ivTemp"
                android:layout_weight="1" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_weight="2">

                <TextView
                    android:text="Temperature moyenne:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="5dp"
                    android:textSize="20sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:id="@+id/tvInfo4" />

                <TextView
                    android:id="@+id/tvTempInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="--- Â° C"
                    android:layout_marginTop="10dp"
                    android:textSize="55sp"
                    android:textAppearance="?android:attr/textAppearanceLarge"/>
            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>