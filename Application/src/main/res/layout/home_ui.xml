<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingHeart"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        app:backgroundTint="@color/ThemeColor"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_home" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingTemp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="340dp"
        app:backgroundTint="@color/ThemeColor"
        android:clickable="true"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_home" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/floatingLung"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="200dp"
        android:clickable="true"
        app:backgroundTint="@color/ThemeColor"
        app:fabSize="mini"
        app:srcCompat="@drawable/ic_home" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvHeartInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="105dp"
            android:paddingLeft="10dp"
            android:text="65 bpm "
            android:textColor="@color/colorio"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvInfo3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="110dp"
            android:text="Rythme pulmonaire: "
            android:textColor="@color/ThemeColor"
            android:textSize="15sp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:layout_marginStart="25dp"
            android:layout_below="@+id/tvHeartInfo"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvInfo4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvHeartInfo"
            android:layout_alignStart="@+id/tvHeartInfo"
            android:layout_below="@+id/tvLungInfo"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="10dp"
            android:text="Temperature moyenne:"
            android:textColor="@color/ThemeColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvInfo1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tvHeartInfo"
            android:layout_alignLeft="@+id/tvHeartInfo"
            android:layout_alignStart="@+id/tvHeartInfo"
            android:layout_marginBottom="27dp"
            android:paddingLeft="10dp"
            android:text="Rythme cardiaque moyen:"
            android:textColor="@color/ThemeColor"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvLungInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/tvInfo3"
            android:layout_alignRight="@+id/tvInfo3"
            android:layout_below="@+id/tvInfo3"
            android:layout_marginTop="8dp"
            android:text="2 bps"
            android:textColor="@color/colorio"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTempInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvInfo4"
            android:layout_alignStart="@+id/tvInfo4"
            android:layout_below="@+id/tvInfo4"
            android:layout_marginTop="8dp"
            android:text="31 C"
            android:textColor="@color/colorio"
            android:textSize="18sp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>